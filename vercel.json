{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "NODE_BACKEND_URL": "https://just-solace-production.up.railway.app",
    "BOT_ENABLED": "true",
    "BOT_INTERVAL_MINUTES": "30",
    "BOT_POSTS_PER_RUN": "3",
    "PORT": "8000"
  }
}
